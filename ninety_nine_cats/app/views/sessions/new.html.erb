<h1>Log In!</h1>

<form action=" <%= session_url %>" method="POST">
    <input type="hidden"
            name="authenticity_token" 
            value="<%= form_authenticity_token%>">

    <br/>

    <label for="user_name">User Name</label>
    <input type="text" 
            name="user[user_name]"
            id="user_name"
            value="">

    <br/>

    <label for="user_password">Password</label>
    <input type="password"
            name="user[password]"
            id="user_password"
            value="">

    <input type="submit" value="Log In">
</form>